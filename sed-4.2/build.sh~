#!/bin/bash
 ./configure \
	--prefix=/home/anushruth/experiment/sysroot \
	--with-sysroot=/home/anushruth/tools/android-ndk-r9/platforms/android-9/arch-arm/ \
	--host=arm-linux \
	--disable-shared \
	CC=~/tools/android-ndk-r9/toolchains/arm-linux-androideabi-4.6/prebuilt/linux-x86_64/bin/arm-linux-androideabi-gcc \
	CXX=~/tools/android-ndk-r9/toolchains/arm-linux-androideabi-4.6/prebuilt/linux-x86_64/bin/arm-linux-androideabi-g++ \
	LDFLAGS=--sysroot=/home/anushruth/tools/android-ndk-r9/platforms/android-9/arch-arm/ \
	CFLAGS="-g -O2 -fPIC --sysroot=/home/anushruth/tools/android-ndk-r9/platforms/android-9/arch-arm/usr/ -I/home/anushruth/tools/android-ndk-r9/platforms/android-9/arch-arm/usr/include"
